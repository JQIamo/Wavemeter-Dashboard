QWidget {
    background-color: transparent;
    color: #FFF;
    font-family: "B612 Mono";
    font-size: 16px;
}

QMainWindow {
    background: black;
}

QScrollArea {
    border: none;
}

QFrame[frameShape="4"]
{
    max-height: 1px;
    border: none;
    background: #4d4d4d;
}

QGridLayout {
    qproperty-spacing: 50px;
}

QAbstractButton {
    background-color: #4d4d4d;

    min-height: 20px;
    padding: 5px 10px;
    border: 2px solid;
    border-top-color: #e6e6e6;
    border-left-color: #e6e6e6;
    border-right-color: #b3b3b3;
    border-bottom-color: #b3b3b3;
}

QAbstractButton:disabled {
    color: #999999;
}

QAbstractButton:hover {
    background-color: #808080;
}

QAbstractButton:pressed {
    background-color: #a6a6a6;

    border-right-color: #e6e6e6;
    border-bottom-color: #e6e6e6;
    border-left-color: #b3b3b3;
    border-top-color: #b3b3b3;
}

RedButton {
    background-color: #b30000;
}

RedButton:hover {
    background-color: #e60000;
}

RedButton:pressed {
    background-color: #ff0000;
}

TitleLabel {
    font-size: 20px;
}

TableHeaderLabel {
    font-size: 20px;
    border: 1px solid;
    border-bottom-color: #4d4d4d;
    color: #808080;
    padding-bottom: 5px;
    qproperty-alignment: AlignCenter;
}

ChannelNameLabel {
    min-height: 50px;
    font-size: 25px;
    border: 2px solid #e6e6e6;
    padding: 10px 20px;
    qproperty-alignment: AlignCenter;
}

ChannelLayoutPlaceholderLabel {
    min-height: 100px;
    min-width: 200px;
}

ChannelPlaceholderPromptLabel {
    color: #4d4d4d;
    font-size: 50px;
    qproperty-alignment: AlignCenter;
}

FreqWavelengthLabel {
    font-size: 30px;
}

ErrorLabel {
    background: #ff0000;
    min-height: 50px;
    font-size: 20px;
    qproperty-alignment: AlignCenter;
}

ChannelAlertLabel {
    background: transparent;
    min-height: 40px;
    min-width: 180px;
    font-size: 20px;
    qproperty-alignment: AlignCenter;

    border: 2px solid #e6e6e6;
}

ChannelAlertLabel[state = "normal"] {
    background: transparent;
}

ChannelAlertLabel[state = "warning"] {
    background: #ff6600;
}

ChannelAlertLabel[state = "error"] {
    background: #ff0000;
}

ErrorBox {
    background: #ff0000;
}

InfoBox {
    background: #0059b3;
}

WarningBox {
    background: #ff6600;
}

MonitorEnableButton {
    height: 20px;
    width: 20px;
}

MonitorEnableButton:hover, MonitorEnableButton:pressed {
    background-color: #ffb84d;
}

ToggleButton:checked {
    background-color: #ff9900;

    border-right-color: #e6e6e6;
    border-bottom-color: #e6e6e6;
    border-left-color: #b3b3b3;
    border-top-color: #b3b3b3;
}

ToggleButton:unchecked {
}

Dialog {
    border: 5px solid #b3b3b3;
    background: black;
}

Dialog QAbstractButton {
    min-height: 15px;
}

QGroupBox {
    margin-top: 1ex;
    padding-top: 1ex;
    border: 1px solid #e6e6e6;
    border-radius: 3px;
}

QGroupBox:title {
    color: #00bfff;
    subcontrol-origin: margin;
    margin-left: 5px;
    background: black;
}

QLineEdit {
    min-height: 25px;
    color: #00e600;
    border: 1px solid #4b4b4b;
}

QLineEdit:disabled {
    background: #333333;
    color: #00e600;
    border: 1px solid #4b4b4b;
}

DialogTitleLabel {
    color: #000;
    font-size: 25px;
    background: #b3b3b3;
    padding: 5px;
}

ChannelNameWidget QAbstractButton {
    min-height: 15px;
    padding: 2px;
    font-size: 12px;
    border-left: none;
}

QMenu {
    background-color: black; /* sets background of the menu */
    border: 2px solid #e6e6e6;
    border-right-color: #b3b3b3;
    border-bottom-color: #b3b3b3;
}

QMenu::item {
    /* sets background of menu item. set this to something non-transparent
        if you want menu color and menu item color to be different */
    color: white;
    background-color: #4d4d4d;
}

QMenu::item:selected { /* when user selects item using mouse or keyboard */
    background-color: #808080;
}
